//2805 나무 자르기

import sys
input = sys.stdin.readline

def nammoo():
    start, result, end = 0, 0, max(data)

    while end >= start:
        res = 0
        mid = (start + end) // 2

        for i in data:
            if i > mid:
                res += i - mid

        if res < home:
            end = mid - 1

        else:
            result = mid
            start = mid + 1

    print(result)

namoo, home = map(int, input().split())
data = list(map(int, input().strip().split()))

nammoo()


